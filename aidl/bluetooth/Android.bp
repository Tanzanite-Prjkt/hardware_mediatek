package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

cc_defaults {
    name: "android.hardware.bluetooth-service-build-defaults.nxp",
    cflags: [
        "-Wall",
        "-Wextra",
    ],
    shared_libs: [
        "android.hardware.bluetooth-V1-ndk",
        "libbase",
        "libbinder_ndk",
        "libcutils",
        "libhidlbase",
        "liblog",
        "libutils",
    ],
    static_libs: [
        "android.hardware.bluetooth.async",
        "android.hardware.bluetooth.hci",
    ],
}

cc_library_static {
    name: "libbluetoothhcihalimplnxp",
    vendor_available: true,
    host_supported: true,
    defaults: ["android.hardware.bluetooth-service-build-defaults.nxp"],
    srcs: [
        "BluetoothHci.cpp",
        "vendor_interface.cc",
        "bluetooth_address.cc",
    ],
}

cc_binary {
    name: "android.hardware.bluetooth-service.default.nxp",
    relative_install_path: "hw",
    init_rc: ["bluetooth-service-default-nxp.rc"],
    vintf_fragments: [":manifest_android.hardware.bluetooth-service.default.nxp.xml"],
    vendor: true,
    defaults: ["android.hardware.bluetooth-service-build-defaults.nxp"],
    srcs: [
        "service.cpp",
    ],
    shared_libs: [
        "android.hardware.bluetooth-V1-ndk",
        "libbase",
        "libbinder_ndk",
        "libhidlbase",
        "libutils",
        "liblog",
    ],
    static_libs: [
        "libbluetoothhcihalimplnxp",
    ],
}

cc_fuzz {
    name: "android.hardware.bluetooth-service.default.nxp_fuzzer",
    host_supported: true,
    defaults: ["service_fuzzer_defaults"],
    srcs: [
        "test/fuzzer.cpp",
    ],
    static_libs: [
        "android.hardware.bluetooth.async",
        "android.hardware.bluetooth.hci",
        "android.hardware.bluetooth-V1-ndk",
        "libbluetoothhcihalimplnxp",
        "liblog",
    ],
    fuzz_config: {
        componentid: 27441,
        cc: [
            "mylesgw@google.com",
        ],
    },
}

filegroup {
    name: "manifest_android.hardware.bluetooth-service.default.nxp.xml",
    srcs: ["bluetooth-service-default-nxp.xml"],
}
